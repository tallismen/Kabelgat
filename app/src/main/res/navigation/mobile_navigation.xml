<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="nl.designlama.kabelgat.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_ledenFragment"
            app:destination="@id/ledenFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_uitlenen"
        android:name="nl.designlama.kabelgat.ui.dashboard.DashboardFragment"
        android:label="@string/title_uitlenen"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="nl.designlama.kabelgat.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/ledenFragment"
        android:name="nl.designlama.kabelgat.ui.leden.LedenFragment"
        android:label="LedenFragment"
        tools:layout="@layout/fragment_leden"/>
</navigation>
